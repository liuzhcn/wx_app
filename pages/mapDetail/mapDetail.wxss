/* pages/mapDetail/mapDetail.wxss */
.contain{
  
  width: 100%;
  height: 600px;
}
.bg-img{
  width: 100%;
  height: 100%;
  -webkit-filter: blur(5px);
  -moz-filter: blur(5px);
  -o-filter: blur(5px);
  -ms-filter: blur(5px);
  filter: blur(5px);
}
.cover_view{
  width: 100%;
  height: 600px;
  position: absolute;top: 0;left: 0;

}
.text{
  margin: 100rpx auto 50rpx auto;
  width: 500rpx;
  height: 300rpx;
  background-color: rgba(255,255, 255,1);
  border-radius: 20rpx;
  padding: 20rpx;
  font-size: 14px;
  color: black;
  /* box-shadow: 2px 2px 2px 2px; */
}
.button{
  margin: 20rpx auto;
  display: block;
  background-color: #0093dc !important;
  color: white !important;
  font-size: 16px;
  
}