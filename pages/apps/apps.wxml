<view class="page">
    
    <image mode='widthFix' style='width:100%;' src='/images/app-title.png'></image>
    
    <view class="page__bd">
        <view class="weui-grids">
            <block wx:for="{{grids}}" wx:key="*this">
                <view class="weui-grid" hover-class="weui-grid_active" bindtap='openApp' data-url='{{item.url}}'>
                    <image class="weui-grid__icon" src="{{item.icon}}" />
                    <view class="weui-grid__label">{{item.name}}</view>
                </view>
            </block>
        </view>
    </view>
</view>