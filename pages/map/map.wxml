<view class='page' style='width:100%;background-color:#0093dc;'>
  <view style='width:100%;'>
    <scroll-view scroll-x='true' style="white-space: nowrap;width:100%;">
      <view wx:for="{{mapData}}" wx:for-item="item" wx:key="{{index}}" bindtap="changeMapKind" data-index="{{index}}" class="top_navi_son {{mapKindFlag == index ? 'choose' : ''}}">{{item.MapKindName}}</view>
    </scroll-view>
  </view>
  <view>

    <map id="map" latitude="{{latitude}}" longitude="{{longitude}}" scale="16" controls="{{controls}}"  bindcontroltap="controltap" markers="{{markers}}" bindcallouttap="toMapDetail" bindregionchange="regionchange" bindupdated="includePoints" bindlongpress="chooseLocation" show-location style="width: 100%; height: 600px;"></map>

  </view>
</view>