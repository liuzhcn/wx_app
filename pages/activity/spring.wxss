}
.weui-grids{
  border: none;
}
.weui-grid{
  border: none;
  width: 50%;
}
.weui-grid__icon {
  display: block;
  width: 72px;
  height: 94px;
  margin: 0 auto;
}

.weui-grid__label {
  margin-top: 5px;
  display: block;
  text-align: center;
  color: #000;
  font-size: 14px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.weui-grid_active {
  background-color: rgba(255,255,255,0.3);
}
@keyframes shake-rotate {
				0% {
					-webkit-transform: rotate(0deg);
				}
				12.5% {
					-webkit-transform: rotate(15deg);
				}
				25% {
					-webkit-transform: rotate(30deg);
				}
				37.5% {
					-webkit-transform: rotate(15deg);
				}
				50% {
					-webkit-transform: rotate(0deg);
				}
				62.5% {
					-webkit-transform: rotate(-15deg);
				}
				75% {
					-webkit-transform: rotate(-30deg);
				}
				87.5% {
					-webkit-transform: rotate(-15deg);
				}
				100% {
					-webkit-transform: rotate(0deg);
				}
			}