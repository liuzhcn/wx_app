/* pages/checkBooks/checkBooks.wxss */

.contain {
  width: 100%;
  background-color: white;
  box-sizing: border-box;
}

.title {
  width: 100%;
  font-size: 16px;
  color: #333;
  font-weight: 700;
  padding: 15px 0;
  text-align: center;
  background-color: white;
}

.status_contain{
  width: 100%;
  height: 80px;
  padding: 20px 10px;
  margin-bottom: 10px;
  background-color: white;
  box-sizing: border-box;
}

.status_item {
  width: 25%;
  float: left;
  text-align: center;
}

.item_title {
  font-size: 12px;
  color: #666;
}

.btn_view {
  width: 100%;
  padding: 10px 0px 10px 10px;
  display: block;
  clear: both;
  box-sizing: border-box;
}

.btn{
  
  padding: 2px 10px;
  border: 1px solid #0093dc;
  display: inline-block;
  border-radius: 5px;
  margin-right: 10px;
  color: #0093dc;
  text-align: center;

}
.btn_hover{
  background-color: #0093dc;
  color: white;
}
/*图书  */
.book_card{
    padding: 10px;
    width: 100%;
    border: 1px solid #e8e8e8;
    border-radius: 3px;
    box-sizing: border-box;
    margin-top: 10px;
}
.cardl{
  width:60%;
  display: inline-block;
  height: 100%;
}
.cardr{
  width: 35%;
  display: block;
  float: right;
  height: 100%;
  margin-left: 5%;
}
.booktitle{
  font-size: 14px;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}
.bookstatus{
    font-size: 12px;
    color: #999;
    word-break: break-all;
}

.circle_view{
    width: 50px;
    height: 50px;
    border-radius: 50%;
    text-align: center;
    margin: 10px auto;
    display: table;
    padding: 0 5px;
    box-sizing: border-box;
    
}
/*正常-绿色*/
.bc1{
  border: 2px solid #34bf59;
  color: #34bf59;
}
/*超期-红色*/
.bc2{
  border: 2px solid #de494e;
  color: #de494e;
}
/*即将到期-橙色*/
.bc3{
  border: 2px solid #ff9800;
  color: #ff9800;
}
.green{
   color: #34bf59;
}
.red{
   color: #de494e;
}
.orange{
  color: #ff9800;
}
.circle-span{
    display: table-cell;
    vertical-align: middle;
    box-sizing: border-box;
    font-size: 14px;
}